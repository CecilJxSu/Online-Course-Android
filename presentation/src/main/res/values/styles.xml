<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
      <!--   your app branding color for the app bar -->
      <item name="colorPrimary">#2196F3</item>
      <!--   darker variant for the status bar and contextual app bars -->
      <item name="colorPrimaryDark">#1976D2</item>
      <!--   theme UI controls like checkboxes and text fields -->
      <item name="colorAccent">#03A9F4</item>
  </style>

    <style name="CourseDetailTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">#DD000000</item>
    </style>

    <style name="TreeNodeStyleDivided">
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@android:drawable/divider_horizontal_bright</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ActivityTheme.Full" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="video_progressbar_style">
        <item name="android:maxWidth">43.0dip</item>
        <item name="android:maxHeight">43.0dip</item>
        <item name="android:indeterminateDrawable">@anim/biz_news_detailpage_loading_large_anim
        </item>
        <item name="android:minWidth">43.0dip</item>
        <item name="android:minHeight">43.0dip</item>
    </style>

    <style name="player_controller_divider">
        <item name="android:background">#cccccc</item>
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_marginBottom">17dp</item>
        <item name="android:layout_marginTop">17dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="player_controller_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">1dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/switcher_item_text_selector</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="switcher_item_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/switcher_item_text_selector</item>
    </style>

</resources>
