<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/course_preview_img"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:padding="5dp"
        fresco:actualImageScaleType="fitXY"
        fresco:placeholderImage="@drawable/carousel_image_1" />

    <TextView
        android:id="@+id/course_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:textColor="#333333"
        android:layout_toRightOf="@+id/course_preview_img"
         />

    <TextView
        android:id="@+id/course_list_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:textColor="#666666"
        android:layout_toRightOf="@+id/course_preview_img"
        android:layout_below="@+id/course_list_name"
        />

    <TextView
        android:id="@+id/course_list_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:textColor="#333333"
        android:text="苏金兴"
        android:layout_toRightOf="@+id/course_preview_img"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/course_list_watch"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="#666666"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>